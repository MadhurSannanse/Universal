<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetails">

  <LinearLayout
      android:id="@+id/layout_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="10">

    <LinearLayout
        android:id="@+id/layout_mid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:background="@drawable/newmid"
        android:orientation="vertical"
        android:weightSum="10">

      <LinearLayout
          android:id="@+id/layout_mid1"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:orientation="vertical"></LinearLayout>

      <LinearLayout
          android:id="@+id/layout_mid2"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2.7"
          android:orientation="vertical"
          android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

          <TextView
              android:id="@+id/textView5"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fontFamily="@string/myriad_pro"
              android:gravity="center"
              android:text="Add Task Details"
              android:textColor="@color/text_color_blue"
              android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp">

          <EditText
              android:id="@+id/txt_taskdetails"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/box"
              android:fontFamily="@string/myriad_pro"
              android:gravity="center"
              android:hint="Write Details Hear"
              android:inputType="textCapSentences"
              android:textColor="@color/colorPrimaryDark"
              android:textSize="15dp" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_mid3"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"></LinearLayout>

      <LinearLayout
          android:id="@+id/layout_mid4"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1.4"
          android:orientation="vertical"
          android:paddingBottom="10dp"
          android:paddingLeft="80dp"
          android:paddingRight="80dp"

          android:paddingTop="5dp">


        <Button
            android:id="@+id/btn_taskprocess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/process"

            />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/wood"
        android:orientation="vertical"></LinearLayout>
  </LinearLayout>
</RelativeLayout>