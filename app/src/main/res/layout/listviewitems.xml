<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/h_layoutmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

  <LinearLayout
      android:id="@+id/v_layout1"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="4"
      android:background="@color/Gray"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txt_proname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="19sp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Product" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/v_layout2"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:background="@color/Gray"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txt_prorate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:text="Rate" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/v_layout3"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:background="@color/Gray"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txt_proqty"
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:text="Quantity" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/v_layout4"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:background="@color/Gray"
      android:layout_weight="2"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txt_proamount"
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="1"
        android:text="Total" />
  </LinearLayout>

</LinearLayout>