<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rthree.infotech.r3infotech.mobile.MainActivity">


  <LinearLayout
      android:id="@+id/v_layoutmain"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/flashscreen"
      android:orientation="vertical"
      android:weightSum="10">

    <LinearLayout
        android:id="@+id/h_layout_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/h_layout_mid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/img_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="#00000000"
          android:scaleType="fitCenter"
          android:src="@drawable/flashname" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/h_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.3"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/lbl_versionname"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textAlignment="center"
          android:textColor="@color/Dark_Gray"
          android:layout_gravity="center_vertical"
          android:text="@string/Version"/>
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>