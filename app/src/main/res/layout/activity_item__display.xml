<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rthree.infotech.r3infotech.mobile.Item_Display">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="@color/newmid"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8.2"
            android:background="@color/newmid"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:paddingLeft="30sp"
                android:paddingRight="20sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/myriadpro_bold"
                        android:gravity="center"
                        android:text="Select Product"
                        android:textColor="@color/Text_Color_Green"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <AutoCompleteTextView
                        android:id="@+id/select_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/box"
                        android:drawableRight="@drawable/down_arrow"
                        android:completionHint="Select a Product"
                        android:completionThreshold="0"
                        android:gravity="center"
                        android:hint="Select a Product"
                        android:popupTheme="@color/Transparent"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:targetApi="lollipop" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textAlignment="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriadpro_bold"
                    android:gravity="center"
                    android:text="Product Name"
                    android:textAlignment="center"
                    android:textColor="@color/Text_Color_Green"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputrate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_rate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:focusable="false"
                            android:fontFamily="@font/myriadpro_bold"
                            android:gravity="center"
                            android:hint="Rate"
                            android:inputType="none"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/Text_Color_Green"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/myriadpro_bold"
                            android:gravity="center"
                            android:hint="Quantity"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/Text_Color_Green"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_scheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/myriadpro_bold"
                            android:gravity="center"
                            android:hint="Scheme/Discount"
                            android:inputType="numberDecimal|numberSigned"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/Text_Color_Green"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:paddingLeft="30sp"
                    android:paddingRight="30sp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_gst"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false"
                            android:fontFamily="@font/myriadpro_bold"
                            android:gravity="center"
                            android:hint="GST Amount"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/Text_Color_Green"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:fontFamily="@font/myriadpro_bold"
                        android:gravity="center"
                        android:hint="Total Amount"
                        android:inputType="number"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/Text_Color_Green"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingBottom="10sp"
                android:paddingTop="5sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_additem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/view" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8"
            android:background="@drawable/wood"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

</ScrollView>